<idea-plugin>
  <id>io.github.jairovsky.intellijautodoc</id>
  <name>IntelliJAutodoc</name>
  <version>1.0</version>
  <vendor email="jairo.santos2@fatec.sp.gov.br">Jairovsky</vendor>

  <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">

    <applicationService
            id="IntelliJAutodoc.MethodNameSplitter"
            serviceInterface="io.github.jairovsky.intellijautodoc.text.MethodNameSplitter"
            serviceImplementation="io.github.jairovsky.intellijautodoc.text.CamelCaseSplitter" />
  </extensions>

  <actions>
    <action
            id="IntelliJAutodoc.GenerateJavadoc"
            text="Generate Javadoc comments"
            class="io.github.jairovsky.intellijautodoc.GenerateJavadocAction"
            description="Generate Javadoc for the current file"/>
  </actions>

</idea-plugin>